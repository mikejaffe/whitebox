/** 
WHITE BOX SCREEN CSS
*/

/** reset */
* { margin:  0; padding: 0; border: none; }

/** global */
body { background: #000 url(<%= asset_path 'bgskin.gif' %>) 50% 0 no-repeat; font-size: 12px; font-family: 'Open Sans', Helvetica, Arial, sans-serif; }
.clear { height: 0; clear: both; }
.clearfix {
  *zoom: 1;
}
.clearfix:before,
.clearfix:after {
  display: table;
  content: "";
  line-height: 0;
}
.clearfix:after {
  clear: both;
}
.alignCenter { text-align: center; }
.floatLeft { float: left; }
.floatRight { float: right; }

hr.bdr-dotted { display: block; width: 100%; height: 4px; background: #fff url(<%= asset_path 'dotted_border.gif' %>) repeat-x; }
.divider { margin: 35px 0; }

/** type */
h1 { font-size: 31px; line-height: 36px; color: #000; font-weight: normal; margin: 0  0 20px 0; }
h2 { font-size: 31px; line-height: 36px; color: #000; font-weight: normal; margin: 20px 0; }
h3 { font-size: 25px; line-height: 29px; color: #000; font-weight: normal; margin: 10px 0 0; }
p { font-size: 17px; line-height: 27px; margin: 0 0 20px; }
ul { list-style: none; }
ul li { padding-left: 15px; background: transparent url(<%= asset_path 'bullet.gif' %>) 0 5px no-repeat; margin: 6px 0; }
#content li { font-size: 15px; }

.subhead { padding: 20px 0 30px; position: relative; margin: 30px 0 0; }
.subhead h2 { font-size: 23px; color: #000; text-align: center; position: relative; margin: 0; }
span.icon-arrow { display: inline-block; margin: 0 55px 0; width: 35px; height: 35px; background: transparent url(<%= asset_path 'arrow_down.png' %>) 0 50% no-repeat; position: relative; top: 8px;  }

.subhead hr { position: absolute; left: 0; }
.subhead hr.top { top: 0; }
.subhead hr.btm { bottom: 0; }

span.nobold { font-weight: normal; }
span.deco { display: inline-block; line-height: 42px; font-size: 38px; font-weight: bold; border: solid 5px #000; padding: 1px 11px 1px 5px; margin: 0 3px 0 0; position: absolute; left: -65px; top: -20px; width: 34px; }
.container { width: 716px; margin: 0 auto; position: relative; }
.ads-container { width: 821px; }
#mainContainer { width: 979px; margin: 0 auto; background: #fff; }
#topbar { padding: 34px 42px; }
#content { padding: 64px 0; }

/** buttons */
.btn { font-size: 13px; line-height: 16px; display: inline-block; padding: 10px 12px; text-align: center; color: #fff; background: #a3e22a; text-decoration: none; }
.btn-center { display: block; margin-left: auto; margin-right: auto; }

/** nav elements */
ul.nav { list-style: none; }
ul.nav li { display: inline-block; background: none; padding-left: 0; margin: 0; }
ul.nav a { font-size: 13px; }

ul#nav-primary, #weather, .searchform { float: left; }
.social-media { float:right; }
ul#nav-primary li, ul#nav-secondary li { margin-right: 13px; }
ul#nav-primary li a, ul#nav-secondary li a { color: #000; text-decoration: none; }
ul#nav-primary li a:hover, ul#nav-secondary li a:hover { text-decoration: underline; }
ul#nav-secondary { background: #e8f852; padding: 13px 0; text-align: center; margin-top: 5px; }

/** top search form */
input#search { width: 127px; border: solid 1px #191919; padding: 4px; color: #999; background: #fff; position: relative; top: -4px; }

/** top weather */
#weather { margin: 0 0 0 30px; height: 30px }
#weather p { margin: 0; position: relative; top: -22px; }
#weather img { position: relative; top: 10px; }

/** social media links */
ul.social-media { position: relative; top: -9px; }
ul.social-media li { margin-right: 3px; }
ul.social-media a { display: block; width: 28px; height: 0; overflow: hidden; padding: 28px 0 0 0; }
a.btn-fb { background: transparent url(<%= asset_path 'icon_fb.png' %>) no-repeat; }
a.btn-twitter { background: transparent url(<%= asset_path 'icon_twitter.png' %>) no-repeat; }
a.btn-youtube { background: transparent url(<%= asset_path 'icon_youtube.png' %>) no-repeat; }
a.btn-vimeo { background: transparent url(<%= asset_path 'icon_vimeo.png' %>) no-repeat; }
a.btn-notsure { background: transparent url(<%= asset_path 'icon_-.png' %>) no-repeat; }
a.btn-rss { background: transparent url(<%= asset_path 'icon_rss.png' %>) no-repeat; }

/** home */
.col { margin: 10px; }
.colwide { width: 480px; }
.colmed { width: 320px; }
.ads-container { width: 870px; margin: 43px auto 0; }
.ads-container img { margin: 0 0 20px 0; }

/** form elements */
input[type=text] { height: 14px; background: #f7f7f7; border: solid 1px #d2d2d2; padding: 10px; }
input[type=text]:focus, 
input[type=password]:focus {  box-shadow: none; border: solid 1px #ccc; outline-color: #a3e22a; outline-style: solid; }
.radio input[type="radio"] {  }
input.input-default { width: 207px; }
div.form-field { width: auto; float: left; margin: 0 25px 16px 0; }
div.radio, div.radio span { width: 42px; height: 42px; }
div.radio span { background: transparent url(<%= asset_path 'radio_button.gif' %>) 0 -50px no-repeat; }
div.radio span.checked { background-position: 0 0; }
label { font-size: 15px; }
span.label-text { display: inline-block; position: relative; }
label.lbl-solid {  font-size: 12px; width: 84px; text-align: center; height: 20px; background: #d2d2d2; color: #fff; padding: 8px 10px; display: inline-block; line-height: 22px; }
.btn-clear, .btn-calendar { cursor: pointer; border-top: solid 1px #d2d2d2; border-bottom: solid 1px #d2d2d2; border-right: solid 1px #d2d2d2;}
.btn-clear img, .btn-calendar img { float: left;}


/** pick size */
h1.hdr_pickSize { width: 675px; height: 0; overflow: hidden; padding-top: 70px; background: #fff url(<%= asset_path 'hdr_pickSize.gif' %>) no-repeat;}
.size-radio { width: 50%; float: left; }
#adTextInput { border: solid 6px #000; padding: 40px 61px 10px 67px; width: 554px; margin: 13px 0 20px; }
#adTextInput ol { list-style: none; margin: 0 auto; }
#adTextInput li { color: #999; padding-left: 40px; margin-bottom: 29px; }
#adTextInput input { background: #f7f7f7; border: solid 1px #d4d4d4; color: #999; width: 448px; height: 14px; padding: 10px; }
span.charCount { margin: 0 0 0 5px; font-size: 13px; }
span.label-type { top: 10px; }
li#lineText1 { background: transparent url(<%= asset_path 'adInput1.gif' %>) no-repeat; }
li#lineText2 { background: transparent url(<%= asset_path 'adInput2.gif' %>) no-repeat; }
li#lineText3 { background: transparent url(<%= asset_path 'adInput3.gif' %>) no-repeat; }
p#sizeChosen { margin: 24px 0 0; font-size: 15px; }
input#adTextSubmit { margin: 0 0 0 56px; }

/** preview */
input#startDate, input#endDate { width: 141px; }
input#runDays, input#cost { height: 23px; }
input#runDays { width: 44px; }
input#cost { width: 74px; }p.notice { font-size: 13px; font-style: italic; line-height: 18px; }
.btn-preview { margin-right: 8px; }
span.label-link { top: -13px; }
input.src-input { width: 269px; padding: 5px; }
#lbl-cost { width: 47px; }
#lbl-run, #lbl-cost { height: 29px; line-height: 16px; }
fieldset#ad-source { margin-bottom: 40px; }
fieldset#start-end { margin-bottom: 25px; }
.preview-buttons { margin-top: 8px; }
div.input-link { position: relative; left: 50px; top: -25px; }

/** global preview styles */
.ad-text { position: absolute; top: 10px; left: 4px; display: none; }

/** flat preview */
#preview-flat-info { clear: both; }
#preview-flat { position: relative; float:left; background: #fff url(<%= asset_path 'preview_flat.gif' %>) no-repeat; width: 467px; height: 26px; margin-right: 12px; margin-bottom: 20px; padding: 17px 0; }
.ad-flat-text { width: 438px; padding: 0 10px; text-align: center; font: bold 16px/26px Arial, Helvetica, sans-serif; text-transform: uppercase; }

/** tall preview */
#preview-tall-info { width: 350px; float: left; }
#preview-tall { position: relative; float: right; width: 310px; margin: 0 0 20px 0; background: #fff url(<%= asset_path 'preview_tall.gif' %>) no-repeat; height: 251px; padding: 17px 0; }
.ad-tall-text { width: 270px; padding: 10px; margin: 12px 0; text-align: center; font: bold 35px/33px Arial, Helvetica, sans-serif; text-transform: uppercase; }


/** about form */
fieldset#about-form { margin-bottom: 30px; }
label.businessInfo { height: 34px; }
input.businessInfo { height: 28px; }
label.businessInfo { font-size: 12px; line-height: 18px; }
input#about-submit { width: 144px; }

/** thanks page */
#thankyou img { display: block; margin: 0 auto 3px; }
#thankyou p { text-align: center; }

/** error message */
.error {
	border: solid 1px red;
	background: #f2dede;
	padding: 10px;
	color: #b94a48;
	max-width: 669px;
}
.hide { display: none; }

/** footer */
img.logo-redbankgreen { float: left; }
div#footer-content { float: left; width: 665px; height: 144px; overflow: hidden; background: #00cb00; padding: 24px 32px 21px 42px; }
p#copyright { clear: both; font: bold italic 11px/15px Helvetica, Arial, sans-serif; margin-top: 10px; }
p.address { font-size: 14px; line-height: 18px; border-right: solid 1px #fff; float: left; padding:  0 38px 10px 0; margin: 10px 35px 25px 0; }
ul.footer-nav { margin-top: 10px; float: left; }
ul.footer-nav li { width: 70px; margin: 0 0 6px 0; }
ul.footer-nav a { font-size: 12px; color: #000; text-decoration: none; }
div#footer ul.social-media { margin-right: 10px; }
.fn1 { width: 66px; }
.fn2 { width: 66px; }
.fn3 { width: 87px; }
.fn4 { width: 98px; }
.fn5 { width: 70px; }
.fn6 { width: 63px; }
